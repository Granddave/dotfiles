[core]
    excludesfile = ~/.gitignore
    editor = nvim
    pager = delta

    # For Windows
    #preloadindex = true
    #fscache = true
    #fsmonitor = true
[gc]
    # For Windows
    #auto = 256
[include]
    path = ~/.gitconfig_local
[push]
    default = current
[alias]
    a = add
    ap = add -p
    d = diff
    ds = diff --staged
    f = fetch -p # Fetch and prune previously tracked branches
    fa = fetch -p --all --tags # Fetch and prune previously tracked branches
    co = checkout
    cp = cherry-pick
    cm = commit
    st = status
    br = branch
    bd = branch -d # Delete merged branch
    bD = branch -D # Force delete a branch
    pu = push --force-with-lease
    hist = log --decorate --oneline --graph --date=short --all
    h = hist
    dump = cat-file -p
    rb = rebase
    rs = reset
    s = submodule
    sf = submodule foreach
    su = submodule update
    sh = stash
    shp = stash pop
    wt = worktree
[status]
    submoduleSummary = true
[diff]
    submodule = log
    colorMoved = default
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    light = false
    side-by-side = false
[merge]
    conflictstyle = diff3
[user]
    email = davidisaksson93@gmail.com
    name = David Isaksson
[rerere]
    enabled = true
